@model List<RobertMaxim.Web.Models.DepotInventoryViewModel>
<!DOCTYPE html>

<html>
<head>
    @Styles.Render("~/Content/css")
    <meta name="viewport" content="width=device-width" />
    <title></title>
</head>
<body>
    <div class="drug-unit-table">
        <table>
            <thead>
                <tr>
                    <th>Depot Name</th>
                    <th>Drug Type</th>
                    <th>Weight (kg)</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.DepotName</td>
                        <td>@item.DrugTypeName</td>
                        <td>@item.TotalWeight</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</body>
</html>
